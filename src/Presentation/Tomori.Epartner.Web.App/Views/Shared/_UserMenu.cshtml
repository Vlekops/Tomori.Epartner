@model Tomori.Epartner.Web.Component.Models.TokenModel
@{
    string img_url = "media/avatars/blank.png";
    if(!string.IsNullOrWhiteSpace(Model.User.PhotoUrl))
    {
        img_url = Model.User.PhotoUrl;
    }
    Tomori.Epartner.Web.Component.Services.FileObject photo = ViewBag.Photo;
    if (photo!=null)
    {
        img_url = photo.Base64;
    }
}
<div class="app-navbar-item ms-1 ms-md-3 gap-3" id="kt_header_user_menu_toggle">
    <!--begin::Menu wrapper-->
    <div class="cursor-pointer symbol symbol-30px symbol-md-40px" data-kt-menu-trigger="{default: 'click', lg: 'hover'}" data-kt-menu-attach="parent" data-kt-menu-placement="bottom-end">
        <img src="@img_url" alt="user" />
    </div>
    <!--begin::User account menu-->
    <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg menu-state-color fw-semibold py-4 fs-6 w-275px" data-kt-menu="true">
        <!--begin::Menu item-->
        <div class="menu-item px-3">
            <div class="menu-content d-flex align-items-center px-3">
                <!--begin::Avatar-->
                <div class="symbol symbol-50px me-5">
                    <img alt="Logo" src="@img_url" />
                </div>
                <!--end::Avatar-->
                <!--begin::Username-->
                <div class="d-flex flex-column">
                    <div class="fw-bold d-flex align-items-center fs-5">
                        @Model.User.FullName
                    </div>
                    <a href="mailto:@(Model.User.Mail)" class="fw-semibold text-muted text-hover-primary fs-7">@Model.User.Mail</a>
                </div>
                <!--end::Username-->
            </div>
        </div>
        <!--end::Menu item-->
        <!--begin::Menu separator-->
        <div class="separator my-2"></div>
        <!--end::Menu separator-->
        <!--begin::Menu item-->
        <div class="menu-item px-5">
            <a href="@Url.Action("Profile","Home")" class="menu-link px-5">Account Settings</a>
        </div>

        <component type="typeof(ButtonLogout)" render-mode="WebAssemblyPrerendered" />
        <!--end::Menu item-->
    </div>
    <!--end::User account menu-->
    <!--end::Menu wrapper-->
</div>