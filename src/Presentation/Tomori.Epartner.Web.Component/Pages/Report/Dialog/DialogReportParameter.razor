<MudDialog Class="mud-dialog-custom">
    <DialogContent>
        <MudForm @ref="_Form" @bind-IsValid="@_FormIsValid" Class="position-relative">
            <MudGrid Spacing="1">
                @foreach (var data in _Parameter)
                {
                    <MudItem lg="12" xs="12">
                        <MudTextField T="string" Label="@data.Key" @bind-Value="@data.Value" Immediate="true" Variant="Variant.Outlined" Margin="Margin.Dense" Required="true" RequiredError="This Field is required!" OnlyValidateIfDirty="true" Clearable />
                    </MudItem>
                }
            </MudGrid>
        </MudForm>
    </DialogContent>

    <DialogActions>
        <MudButton StartIcon="@Icons.Material.Filled.Cancel" Variant="Variant.Filled" Color="Color.Error" Size="Size.Small" OnClick="@(_ => _MudDialog.Cancel())">Cancel</MudButton>
        <MudButton StartIcon="@Icons.Material.Filled.Save" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>
