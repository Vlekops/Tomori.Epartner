<section class="position-relative">
    <MudForm @ref="_Form" @bind-IsValid="@_FormIsValid" Class="position-relative">
        <MudOverlay @bind-Visible="_FormIsLoading" LightBackground="true" Absolute="true">
            <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true" />
        </MudOverlay>

        <section class="mb-5">
            <MudGrid Spacing="2">
                <MudItem lg="6" xs="6">
                    <MudText Class="fw-semibold text-muted padding-top-sm-11px">SMTP</MudText>
                </MudItem>
                <MudItem lg="6" xs="6">
                    <MudText Class="fw-semibold text-muted padding-top-sm-11px">SMTP PORT</MudText>
                </MudItem>
                <MudItem lg="6" xs="6">
                    <MudTextField @bind-Value="_Smtp" Immediate="true" Variant="Variant.Outlined" Margin="Margin.Dense" Required="true" RequiredError="This Field is required!" OnlyValidateIfDirty="true" MaxLength="200" Clearable />
                </MudItem>
                <MudItem lg="6" xs="6">
                    <MudNumericField @bind-Value="_SmtpPort" Immediate="true" Variant="Variant.Outlined" Margin="Margin.Dense" Required="true" RequiredError="This Field is required!" OnlyValidateIfDirty="true"  Clearable />
                </MudItem>

                <MudItem lg="6" xs="6">
                    <MudText Class="fw-semibold text-muted">Sender Mail</MudText>
                </MudItem>
                <MudItem lg="6" xs="6">
                    <MudText Class="fw-semibold text-muted">Password</MudText>
                </MudItem>
                <MudItem lg="6" xs="6">                    
                    <MudTextField @bind-Value="_SenderMail" Immediate="true" Variant="Variant.Outlined" Margin="Margin.Dense" Required="true" RequiredError="This Field is required!" OnlyValidateIfDirty="true" MaxLength="200" Clearable />
                </MudItem>
                <MudItem lg="6" xs="6">                    
                    <MudTextField @bind-Value="_Password" Immediate="true" Variant="Variant.Outlined" Margin="Margin.Dense" Required="true" RequiredError="This Field is required!" OnlyValidateIfDirty="true" MaxLength="200" Clearable />
                </MudItem>
            </MudGrid>
        </section>

        @if (!_FormIsLoading)
        {
            <MudButton StartIcon="@Icons.Material.Filled.Save" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small" OnClick="Save">Save</MudButton>
        }
    </MudForm>
</section>