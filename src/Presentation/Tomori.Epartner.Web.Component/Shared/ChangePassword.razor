<MudDialog Class="mud-dialog-custom">
    <DialogContent>
        <MudForm @ref="_Form" @bind-IsValid="@_FormIsValid" Class="position-relative">
            <MudOverlay @bind-Visible="_FormIsLoading" LightBackground="true" Absolute="true">
                <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true" />
            </MudOverlay>

            <MudGrid Spacing="1">

                <MudItem lg="12" xs="12" Class="padding-top-14px d-flex justify-md-start">
                    <SignMandatory Text="Password" />
                </MudItem>

                <MudItem lg="12" xs="12">
                    <MudTextField Label="Password" @bind-Value="_Password" Immediate="true" Variant="Variant.Outlined" Margin="Margin.Dense" InputType="@_PasswordInput" Adornment="Adornment.End" AdornmentIcon="@_PasswordInputIcon" OnAdornmentClick="ShowHidePassword" AdornmentAriaLabel="Show Password" Required="true" RequiredError="Password is required!" OnlyValidateIfDirty="true" Clearable />
                </MudItem>
            </MudGrid>

        </MudForm>
    </DialogContent>

    <DialogActions>
        @if (!_FormIsLoading)
        {
            <MudButton StartIcon="@Icons.Material.Filled.Save" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small" OnClick="Save">Save</MudButton>
        }
    </DialogActions>
</MudDialog>
