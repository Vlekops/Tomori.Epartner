@{
    ViewData["Title"] = "{{name}}";
}

<div class="content-wrapper">
    <div class="content-header row">
        <div class="content-header-left col-md-6 col-12 mb-2">
            <h3 class="content-header-title">{{name}}</h3>
            <div class="row breadcrumbs-top">
                <div class="breadcrumb-wrapper col-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action(" Index","Home", new { Area="" })">Home</a></li>
                        <li class="breadcrumb-item active">{{name}}</li>
                    </ol>
                </div>
            </div>
        </div>
        <div class="content-header-right col-md-6 col-12">
            <div class="btn-group float-md-right" role="group" aria-label="Button group with nested dropdown">
                <button class="btn btn-info btn-glow" id="{{name}}-addBtn" type="button"><i class="ft-plus-circle icon-left"></i> Tambah</button>
            </div>
        </div>
    </div>


    <div class="content-body">
        <div class="row mb-1">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card border-light">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped table-hover" id="{{name}}-table">
                                        <thead class="bg-info white">
                                            <tr>
                                                <th width="5%" class="text-center">No</th>
                                                {{attributes}}
                                                <th>Aksi</th>
                                            </tr>
                                        </thead>
                                        <tbody id="{{name}}-tbody">
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-1 justify-content-between">
                            <div class="col-md-7 align-self-center">
                                <span class="d-inline-block mr-1">
                                    <select class="form-control form-control-sm" id="{{name}}-page_select">
                                        <option value="5">5</option>
                                        <option value="10" selected>10</option>
                                        <option value="20">20</option>
                                        <option value="50">50</option>
                                    </select>
                                </span>
                                <span>
                                    Showing <b id="{{name}}-from_page"></b> To <b id="{{name}}-to_page"></b> From <b id="{{name}}-total"></b> Total Data
                                </span>
                            </div>
                            <div class="col-md-5 align-self-center">
                                <div class="float-right xs-1" id="{{name}}-pagination"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section modals{
    @await Html.PartialAsync("~/Views/{{schema}}/{{name}}/_Add.cshtml")
    @await Html.PartialAsync("~/Views/{{schema}}/{{name}}/_Edit.cshtml")
    @await Html.PartialAsync("~/Views/{{schema}}/{{name}}/_Detail.cshtml")
}

@section scripts{
    <script type="text/javascript" src="@Url.Content(" ~ /scripts/{{schema}}/{{name}}/index.js")"></script>
    <script type="text/javascript" src="@Url.Content(" ~ /scripts/{{schema}}/{{name}}/add.js")"></script>
    <script type="text/javascript" src="@Url.Content(" ~ /scripts/{{schema}}/{{name}}/edit.js")"></script>
    <script type="text/javascript" src="@Url.Content(" ~ /scripts/{{schema}}/{{name}}/delete.js")"></script>
    <script type="text/javascript" src="@Url.Content(" ~ /scripts/{{schema}}/{{name}}/detail.js")"></script>
}
